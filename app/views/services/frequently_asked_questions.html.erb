<% content_for(:structured_data) do %>
<script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "FAQPage",
    "mainEntity": [
      <% @items.each do |item| %>
      {
        "@type": "Question",
        "name": <%= item["title"] %>,
        "acceptedAnswer": {
          "@type": "Answer",
          "text": <%= item["body"].html_safe %>
        }
      }
      <% end %>
    ]
  }
</script>
<% end %>
