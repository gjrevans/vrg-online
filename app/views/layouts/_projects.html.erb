<section class="l-section l-section--<%= color %> l-section--<%= size %> text-center text-sm-left" id="ourwork">
	<div class="container">
		<div class="row text-center">
			<div class="col-md-12">
				<h2 class="text-darken mb-5">Some of Our Work</h2>
			</div>
		</div>
    <div class="row">
      <% @projects.each do |project| %>
        <div class="col-md-6 col-lg-4">
          <div class="m-ourwork">
            <div class="m-ourwork__image">
              <%= image_tag(project.image_url, class: "img-fluid") %>
              <div class="m-ourwork__image__body">
                <h5><%= link_to project.title, project_path(project) %></h5>
                <p class="mb-0"><%= truncate_description(project.description) %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
		<div class="row justify-content-center mt-5 text-center">
			<div class="col-md-6">
				<h4 class="text-darken">we've done our job when you're blown away with what we've created together...</h4>
			</div>
		</div>
	</div>
</section>
