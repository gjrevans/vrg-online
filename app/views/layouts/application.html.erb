<!DOCTYPE html>
<html lang="<%= I18n.locale %>">
  <head>
    <%
      brand_title = "Design, Discovery, & Development Consultants | VRG Interactive"
      brand_description = "We help local business owners create beautiful, discoverable, high conversion online experiences."
    %>
    <meta charset="utf-8">
    <title><%= content_for?(:title) ? content_for(:title) : brand_title %></title>
    <meta name="description" content="<%= content_for?(:description) ? content_for(:description) : brand_title %>">
    <meta name="author" content="VRG Interactive">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= render 'application/favicon' %>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render partial: "layouts/flash", flash: flash %>
    <%= render partial: "layouts/navigation" %>
    <div class="l-main">
      <%= yield %>
    </div>
    <%= render partial: "layouts/footer" %>
    <%= content_for(:javascript) %>

    <!-- Load Facebook SDK for JavaScript -->
    <div id="fb-root"></div>
    <script>
      window.fbAsyncInit = function() {
        FB.init({
          appId            : '545062819428695',
          autoLogAppEvents : true,
          xfbml            : true,
          version          : 'v5.0'
        });
      };
      // Import Facebook Messenger
      (function(d, s, id){
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) {return;}
        js = d.createElement(s); js.id = id;
        js.src = "https://connect.facebook.net/en_US/sdk.js";
        fjs.parentNode.insertBefore(js, fjs);
     }(document, 'script', 'facebook-jssdk'));
    </script>
    <div class="fb-customerchat"
      attribution=setup_tool
      page_id="143105109120716"
      theme_color="#e2243d"logged_in_greeting="Hi! How can we help you?"
      logged_out_greeting="GoodBye!... Hope to see you soon."
      minimized="false">
    </div>
  </body>
</html>
