<% content_for(:title) { t("projects.index.page_title") } %>
<% content_for(:description) { t("projects.index.page_description") } %>

<%=
  render partial: "layouts/breadcrumb", locals: {
    items: [
      {link: root_path, title: "Home"},
      {link: "#", title: t("projects.index.page_title")}
    ]
  }
%>

<header class="l-section l-section--primary l-section--projects d-flex justify-content-center align-items-center">
	<div class="container text-center">
		<div class="row justify-content-center">
			<div class="col-md-12">
				<h1 class="text-white"><%= content_for(:title) %></h1>
        <div class="row justify-content-center">
          <div class="col-md-6">
            <p class="text-white-muted"><%= content_for(:description) %></p>
            <%= link_to "Lets Work Together", root_path(anchor: "contact"), class: "btn btn-primary px-5" %>
          </div>
        </div>
			</div>
		</div>
  </div>
</header>

<section class="l-section l-section--light l-section--md">
  <div class="container">
    <h1 class="mb-4"><%= "Projects" %></h1>
    <div class="card-columns">
      <% @projects.each do |project| %>
        <%= link_to project_path(project) do %>
          <div class="card card--link">
            <div class="card-image" style="background-image: url('<%= project.image_url %>')" alt="<%= project.title %>"></div>
            <div class="card-body">
              <h4 class="mb-1"><%= project.title %></h4>
              <p><%= project.description %></p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</section>
