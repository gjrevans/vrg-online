<% content_for(:title) { t("articles.index.page_title") } %>
<% content_for(:description) { t("articles.index.page_description") } %>

<%=
  render partial: "layouts/breadcrumb", locals: {
    items: [
      {link: root_path, title: "Home"},
      {link: "#", title: t("articles.index.page_title")}
    ]
  }
%>

<header class="l-section l-section--primary l-section--articles d-flex justify-content-center align-items-center">
	<div class="container text-center">
		<div class="row justify-content-center">
			<div class="col-md-12">
				<h1 class="text-white"><%= content_for(:title) %></h1>
        <div class="row justify-content-center">
          <div class="col-md-6">
            <p class="text-white-muted"><%= content_for(:description) %></p>
            <%= link_to "Lets Work Together", root_path(anchor: "contact"), class: "btn btn-primary px-5" %>
          </div>
        </div>
			</div>
		</div>
  </div>
</header>

<section class="l-section l-section--light l-section--md">
  <div class="container">
    <% if @articles.empty? %>
    <div class="row">
      <div class="col-12">
        <div class="border rounded text-center p-5">
          <h4><%= t("articles.index.no_articles_title") %></h4>
          <p class="mb-0"><%= t("articles.index.no_articles_body") %></p>
        </div>
      </div>
    </div>
    <% else %>
      <div class="card-columns">
        <% @articles.each do |article| %>
          <%= render partial: "articles/partials/article", locals: {article: article} %>
        <% end %>
      </div>
    <% end %>
  </div>
</section>
