<% content_for(:title) { "Hello" } %>
<% content_for(:description) { "Hello" } %>

<section class="l-section l-section--white l-section--md">
  <div class="container">
    <h1 class="mb-4"><%= "Projects" %></h1>
    <div class="card-columns">
      <% @projects.each do |project| %>
        <%= link_to project_path(project) do %>
          <div class="card card--link">
            <div class="card-image" style="background-image: url('<%= project.image_url %>')" alt="<%= project.title %>"></div>
            <div class="card-body">
              <h4 class="mb-1"><%= project.title %></h4>
              <p><%= project.description %></p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</section>
